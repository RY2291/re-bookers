<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <th>
            <%= book.title %>
          </th>
          <th>
            <%= book.body %>
          </th>
          <th>
            <%= link_to "show", book_path(book.id) %>
          </th>
          <th>
            <%= link_to "Edit", edit_book_path(book.id) %>
          </th>
          <th>
            <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <p><%= @book.errors.count %>error prohibited this book from beiing saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model:@book, local:true do |f| %>
    <label>Title</label>
    <p><%= f.text_field :title %></p>
    <label>Body</label>
    <p><%= f.text_area :body %></p>
    <p><%= f.submit "Create Book" %></p>
  <% end %>
</body>