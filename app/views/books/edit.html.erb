<h1>Editing Book</h1>

<%= form_with model: @book, local:true do |f| %>
  <label>Title</label>
  <p><%= f.text_field :title %></p>
  <label>Body</label>
  <p><%= f.text_area :body %></p>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
